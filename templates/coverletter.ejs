    #Info {
      flex: 0 0 65%;
      width: 100%;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      flex-direction: column;
    }
    #Info .Key,
    #Info .Value {
      display: inline-block;
      padding: 0.075in;
      margin: 0;
      font-size: 10pt;
    }
    #Info .Key {
      width: auto;
      min-width: 5em;
      font-weight: 700;
    }
    #Info .Value {
      font-weight: 500;
    }
    #Frame {
      margin: 3em;
      padding: 1.5em;
      border: #fff;
    }
    #Frame {
      position: relative;
      width: 80%;
      max-width: 800px;
      margin: 50px auto;
      padding: 30px;
      background-color: #222;
      color: #fff;
      border: 2px solid #def3f3;
      box-shadow: 0 0 10px 2px #def3f3;
      overflow: hidden;
    }
    #Frame:before,
    #Frame:after {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      border: 2px solid #0ff;
      box-shadow: 0 0 10px 2px #0ff;
      z-index: -1;
    }
    #Frame:before {
      top: -10px;
      left: -10px;
    }
    #Frame:after {
      bottom: -10px;
      right: -10px;
    }
    section h2 {
      font-weight: 300;
      text-transform: lowercase;
      text-align: right;
      height: 2.5em;
    }
    section h2:before {
      content: '> ';
      opacity: 0.6;
    }
    section p {
      font-size: 8pt;
      text-align: justify;
    }
    section ul {
      margin: 0;
      padding: 0;
      font-size: 8pt;
      text-align: justify;
    }
    * ul {
      list-style-type: none;
    }
    #CoverLetter h2 {
      font-size: 12pt;
      margin-bottom: 3em;
    }
    #CoverLetter h3 {
      font-size: 12pt;
      margin-bottom: 2em;
      margin-left: 0.75em;
      font-weight: 600;
      height: 1.5em;
    }
    #CoverLetter p {
      line-height: 2.25em;
      padding-left: 1em;
      padding-right: 1em;
      text-transform: initial;
      font-size: 10pt;
    }
    main section h2 {
      font-size: 16pt;
      line-height: 1em;
      margin: 0.5em 0;
      padding: 0;
      height: 1.2em;
    }
    main section h2 span {
      opacity: 0.6;
    }
    main section h2 span.main {
      opacity: 1 !important;
    }
    main section p,
    main section ul {
      line-height: 2.25em;
      padding-left: 1em;
      padding-right: 1em;
      text-transform: uppercase;
      -webkit-margin-before: 0;
              margin-block-start: 0;
      -webkit-margin-after: 0;
              margin-block-end: 0;
    }
    main section ul li {
      text-align: left;
    }
    .Name {
      margin: 0;
    }
    .Bye {
      margin: 2em 0 1.125em 0.75em !important;
    }
  </style>
</head>
