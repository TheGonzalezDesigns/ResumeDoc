    }
    footer #Profile {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      height: 10em;
      margin-bottom: 2em;
      margin-top: 3em;
    }
    footer #Profile #Picture {
      flex: 0 0 35%;
      width: 100%;
      height: 100%;
      text-align: center;
      filter: drop-shadow(2px 4px 3px rgba(0,0,0,0.75));
